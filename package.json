{
	"name": "@skyra/nayre-stack",
	"description": "Process stack for Nayre",
	"author": "Skyra Project <contact@skyra.pw>",
	"license": "Apache-2.0",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build",
		"watch": "turbo run watch",
		"prisma:generate": "yarn workspace @skyra/acryss exec \"prisma generate\"",
		"start": "turbo run start",
		"clean": "node scripts/clean.mjs",
		"test": "turbo run test",
		"lint": "turbo run lint",
		"format": "prettier --write .",
		"postinstall": "husky install .github/husky"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.6.3",
		"@commitlint/config-conventional": "^17.6.3",
		"@prettier/plugin-xml": "^3.1.0",
		"@sapphire/eslint-config": "^4.4.2",
		"@sapphire/prettier-config": "^1.4.5",
		"@sapphire/ts-config": "^4.0.0",
		"@types/gradient-string": "^1.1.2",
		"@types/node": "^18.16.16",
		"@typescript-eslint/eslint-plugin": "^5.59.7",
		"@typescript-eslint/parser": "^5.59.7",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.41.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-prettier": "^4.2.1",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.2",
		"prettier": "^2.8.8",
		"prettier-plugin-tailwindcss": "^0.3.0",
		"pretty-quick": "^3.1.3",
		"turbo": "^1.9.9",
		"typescript": "^5.0.4",
		"vite": "^4.3.9",
		"vitest": "^0.31.1"
	},
	"resolutions": {
		"ansi-regex": "^5.0.1",
		"minimist": "^1.2.8"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"packageManager": "yarn@3.5.1",
	"volta": {
		"node": "18.16.0"
	}
}
