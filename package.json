{
	"name": "@skyra/nayre-stack",
	"description": "Process stack for Nayre",
	"author": "Skyra Project <contact@skyra.pw>",
	"license": "Apache-2.0",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build",
		"watch": "turbo run watch",
		"prisma:generate": "yarn workspace @skyra/acryss exec \"prisma generate\"",
		"start": "turbo run start",
		"clean": "node scripts/clean.mjs",
		"test": "turbo run test",
		"lint": "turbo run lint",
		"prettier": "prettier --ignore-path=.prettierignore",
		"format": "prettier --write .",
		"postinstall": "husky install .github/husky && yarn workspace @skyra/acryss prisma:generate"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.7.2",
		"@commitlint/config-conventional": "^17.7.0",
		"@prettier/plugin-xml": "^3.2.1",
		"@sapphire/eslint-config": "^5.0.2",
		"@sapphire/prettier-config": "^2.0.0",
		"@sapphire/ts-config": "^5.0.0",
		"@types/gradient-string": "^1.1.3",
		"@types/node": "^20.8.3",
		"@typescript-eslint/eslint-plugin": "^6.7.4",
		"@typescript-eslint/parser": "^6.7.4",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.51.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-prettier": "^5.0.0",
		"husky": "^8.0.3",
		"lint-staged": "^15.0.0",
		"prettier": "^3.0.3",
		"prettier-plugin-tailwindcss": "^0.5.5",
		"turbo": "^1.10.15",
		"typescript": "^5.2.2",
		"vite": "^4.4.11",
		"vitest": "^0.34.6"
	},
	"resolutions": {
		"ansi-regex": "^5.0.1",
		"minimist": "^1.2.8"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*": "prettier --ignore-unknown --write",
		"*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"packageManager": "yarn@3.6.4",
	"volta": {
		"node": "18.18.0"
	}
}
