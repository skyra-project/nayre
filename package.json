{
	"name": "@skyra/nayre-stack",
	"description": "Process stack for Nayre",
	"author": "Skyra Project <contact@skyra.pw>",
	"license": "Apache-2.0",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "yarn workspaces foreach -ptR run build",
		"dev": "yarn workspaces foreach -ptR run dev",
		"watch": "yarn workspaces foreach -ptR run watch",
		"prisma:generate": "yarn workspace @skyra/acryss exec \"prisma generate\"",
		"start": "yarn workspaces foreach -ptR run start",
		"clean": "node scripts/clean.mjs",
		"test": "yarn workspaces foreach run test",
		"lint": "yarn workspaces foreach run lint",
		"format": "prettier --write .",
		"update": "yarn upgrade-interactive",
		"postinstall": "husky install .github/husky"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.4.4",
		"@commitlint/config-conventional": "^17.4.4",
		"@prettier/plugin-xml": "^2.2.0",
		"@sapphire/eslint-config": "^4.3.8",
		"@sapphire/prettier-config": "^1.4.5",
		"@sapphire/ts-config": "^3.3.4",
		"@types/gradient-string": "^1.1.2",
		"@types/node": "^18.15.0",
		"@typescript-eslint/eslint-plugin": "^5.54.1",
		"@typescript-eslint/parser": "^5.54.1",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.36.0",
		"eslint-config-prettier": "^8.7.0",
		"eslint-plugin-prettier": "^4.2.1",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.0",
		"prettier": "^2.8.4",
		"prettier-plugin-tailwindcss": "^0.2.4",
		"pretty-quick": "^3.1.3",
		"typescript": "^4.9.5",
		"vite": "^4.1.4",
		"vitest": "^0.29.2"
	},
	"resolutions": {
		"ansi-regex": "^5.0.1",
		"minimist": "^1.2.8"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"packageManager": "yarn@3.4.1",
	"volta": {
		"node": "18.15.0"
	}
}
